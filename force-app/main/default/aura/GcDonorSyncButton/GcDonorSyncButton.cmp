<aura:component controller="GetGcDonorData" implements="force:lightningQuickActionWithoutHeader,force:hasRecordId,force:hasSObjectName" access="global">
   <aura:attribute name="ObjName" type="String"/>
   
      <aura:handler event="aura:waiting" action="{!c.showSpinner}"/>
    <aura:handler event="aura:doneWaiting" action="{!c.hideSpinner}"/>
    <aura:attribute name="toggleSpinner" type="boolean" default="false"/> 
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <div class="slds-card">
        <div class="slds-p-vertical_medium slds-p-horizontal_medium">
            <fieldset class="slds-form-element slds-form_compound">
    			<aura:if isTrue="{!v.toggleSpinner}">
                    <div class="slds-spinner_container">
                        <div class="slds-spinner--brand  slds-spinner slds-spinner--large slds-is-relative" role="alert">
                            <span class="slds-assistive-text">Loading</span>
                            <div class="slds-spinner__dot-a"></div>
                            <div class="slds-spinner__dot-b"></div>
                        </div>
                    </div>
                </aura:if> 
                <div class="btncss" style="text-align: center;padding-top: 77px;">
                    <lightning:button label="{!'Sync '+v.ObjName }" title="{!'Sync'+v.ObjName }" onclick="{!c.myAction}" />
                </div>
                </fieldset>
            </div>
        </div>
</aura:component>